<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/gray_background">
    <CheckBox
        android:id="@+id/select_driver_cb"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/select_driver_rl"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_toEndOf="@id/select_driver_cb"
        android:background="@drawable/invite_detail_white_background"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/select_driver_avatar_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:background="@mipmap/driver_avatar"
            android:contentDescription="@string/pic_desc"
            tools:ignore="RtlSymmetry" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/select_driver_avatar_iv"
            android:orientation="vertical"
            android:paddingStart="10dp"
            tools:ignore="RelativeOverlap,RtlSymmetry">

            <TextView
                android:id="@+id/select_driver_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                tools:text="你好" />

            <TextView
                android:id="@+id/select_driver_phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/order_item_text"
                tools:text="1234" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/my_driver_call_iv"
            android:contentDescription="@string/pic_desc"
            android:src="@drawable/driver_invite_line" />

        <ImageView
            android:id="@+id/select_driver_call_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/pic_desc"
            android:padding="10dp"
            android:src="@mipmap/driver_invite_call" />
    </RelativeLayout>

</RelativeLayout>