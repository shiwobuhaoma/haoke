<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"

    android:orientation="horizontal">

    <TextView
        android:id="@+id/certification_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/res_textSize_18dp"
        android:gravity="center_vertical"
        android:padding="@dimen/res_textSize_15dp"
        android:text="@string/name"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/certification_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:background="@mipmap/my_ic_arrow"
        android:gravity="center"
         />

    <EditText
        android:id="@+id/certification_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/certification_tv_name"
        android:layout_toStartOf="@id/certification_arrow"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="@string/input_name"
        android:padding="15dp"
        android:textSize="12sp" />

    <View
        android:id="@+id/certification_v_line"
        android:layout_width="match_parent"
        android:layout_below="@id/certification_tv_name"
        android:layout_height="1dp"
        android:background="@color/my_item_space" />
    <View
        android:id="@+id/certification_v_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/res_textSize_15dp"
        android:layout_below="@id/certification_v_line"
        android:background="@color/my_item_space" />
</RelativeLayout>