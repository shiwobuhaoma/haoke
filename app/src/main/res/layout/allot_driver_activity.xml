<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background">

    <com.xinze.haoke.widget.SimpleToolbar
        android:id="@+id/allot_driver_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/allot_driver_srl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/allot_driver_toolbar">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/allot_driver_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <Button
        android:id="@+id/allot_driver_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:background="@drawable/shape_round_orange"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="16sp" />
</RelativeLayout>