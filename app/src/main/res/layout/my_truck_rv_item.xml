<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lv_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/my_truck_top_rl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/invite_detail_white_background">

        <TextView
            android:id="@+id/my_truck_truckname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:text="@string/my_truck_trucknum"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:id="@+id/my_truck_edit_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/pic_desc"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@mipmap/select_edit" />

        <ImageView
            android:id="@+id/my_truck_next_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/pic_desc"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@mipmap/right_arrow"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/my_truck_del_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/my_truck_edit_iv"
            android:contentDescription="@string/pic_desc"
            android:paddingEnd="15dp"
            android:src="@mipmap/select_del"
            tools:ignore="RtlSymmetry" />

    </RelativeLayout>

    <View
        android:id="@+id/my_truck_middle_line_v"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_line" />


    <RelativeLayout
        android:id="@+id/my_truck_bottom_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/invite_detail_white_background"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/my_truck_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="10dp"
            android:singleLine="false"
            android:text="@string/my_truck_exlpain"
            android:textSize="12sp"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:id="@+id/my_truck_status_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/pic_desc"
            android:src="@mipmap/check_no" />

    </RelativeLayout>

</LinearLayout>