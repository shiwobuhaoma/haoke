<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    tools:context=".module.drivers.view.DriverAddActivity">

    <com.xinze.haoke.widget.SimpleToolbar
        android:id="@+id/my_driver_add_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/my_driver_add_toolbar"
        android:background="@color/item_whiteground"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/my_driver_add_phone_tv"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/driver_add_phone_tv"
            android:textColor="@color/themeOrange"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/pic_desc"
            android:paddingEnd="17dp"
            android:src="@drawable/driver_invite_line"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:inputType="phone"
            android:id="@+id/my_driver_add_phone_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/my_driver_add_hint"
            android:textColorHint="@color/hint_color"
            android:textSize="14sp" />

    </LinearLayout>


    <Button
        android:id="@+id/my_driver_add_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/invite_detail_orange_background"
        android:text="@string/driver_add_commit"
        android:textColor="@color/white"
        android:textSize="17sp" />


</RelativeLayout>