<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/send_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="15dp"
        android:text="@string/bill_number"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/driver_receive_bill_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/half_line"
        android:padding="15dp"
        android:text="@string/driver_receive_bill_list"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/receive_bill_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>