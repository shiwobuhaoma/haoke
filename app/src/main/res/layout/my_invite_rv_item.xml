<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lv_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_line" />

    <RelativeLayout
        android:id="@+id/my_invite_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/my_invite_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:maxLines="1"
            android:text="姓名"
            android:textColor="@color/themeBlack"
            android:textSize="14sp" />
        <!--        android:drawablePadding="10dp"
                android:drawableEnd="@mipmap/invite_company"-->


        <TextView
            android:id="@+id/my_invite_time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/owner_invite_name_tv"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="7.5dp"
            android:maxLines="1"
            android:text="时间"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/my_invite_call_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:src="@mipmap/driver_invite_call" />


        <TextView
            android:id="@+id/my_invite_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/owner_invite_call_iv"
            android:drawableEnd="@drawable/driver_invite_line"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:text="已同意"
            android:textColor="@color/themeBlack"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/my_invite_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_line" />

        <Button
            android:id="@+id/my_invite_bt"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/my_invite_line"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"
            android:background="@mipmap/reinvite" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/my_item_line" />
</LinearLayout>