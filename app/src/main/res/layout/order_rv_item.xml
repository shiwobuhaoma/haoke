<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/order_item_tv_id"
        android:text="@string/order_id"
        android:maxLines="1"
        android:ellipsize="end"
        android:padding="@dimen/res_textSize_15dp"
        android:drawablePadding="@dimen/res_textSize_18dp"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="@color/themeBlack"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/order_item_tv_line"
        android:layout_width="match_parent"
        android:layout_below="@id/order_item_tv_id"
        android:background="@color/my_item_line"
        android:layout_height="1dp"/>

<RelativeLayout
    android:id="@+id/order_item_rl"
    android:layout_below="@id/order_item_tv_line"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/order_tv_right_start"
        android:padding="@dimen/res_textSize_10dp"
        android:textColor="@color/themeBlack"
        android:ellipsize="end"
        android:maxLines="1"
        android:drawableStart="@mipmap/order_start"
        android:drawablePadding="10dp"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:textSize="12sp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/order_tv_right_end"
        android:paddingStart="@dimen/res_textSize_10dp"
        android:paddingBottom="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingEnd="@dimen/res_textSize_10dp"
        android:textColor="@color/themeBlack"
        android:layout_below="@id/order_tv_right_start"
        android:drawableStart="@mipmap/order_end"
        android:drawablePadding="10dp"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:textSize="12sp"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/order_iv_state"
        android:background="@mipmap/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content" />

</RelativeLayout>

    <View
        android:id="@+id/order_item_v_line"
        android:layout_width="match_parent"
        android:layout_below="@id/order_item_rl"
        android:background="@color/my_item_line"
        android:layout_height="1dp"/>
    <LinearLayout
        android:id="@+id/order_item_ll"
        android:layout_below="@id/order_item_v_line"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="10dp"
            android:maxLines="1"
            android:id="@+id/order_tv_freight"
            android:ellipsize="end"
            android:drawablePadding="5dp"
            android:textColor="@color/order_item_text"
            android:text="@string/order_freight"
            android:textSize="12sp"
            android:drawableEnd="@drawable/line"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="10dp"
            android:maxLines="1"
            android:textSize="12sp"
            android:drawablePadding="5dp"
            android:id="@+id/order_tv_truckCode"
            android:textColor="@color/order_item_text"
            android:text="@string/order_truck_type"
            android:drawableEnd="@drawable/line"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="10dp"
            android:maxLines="1"
            android:textSize="12sp"
            android:drawablePadding="5dp"
            android:id="@+id/order_tv_productName"
            android:textColor="@color/order_item_text"
            android:text="@string/order_product_name"
            android:drawableEnd="@drawable/line"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="10dp"
            android:maxLines="1"
            android:textSize="12sp"
            android:ellipsize="end"
            android:drawablePadding="5dp"
            android:textColor="@color/order_item_text"
            android:id="@+id/order_tv_distance"
            android:text="@string/order_distance"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:id="@+id/order_item_v_space"
        android:layout_width="match_parent"
        android:layout_below="@id/order_item_ll"
        android:background="@drawable/space"
        android:layout_height="@dimen/res_textSize_15dp"/>
</RelativeLayout>