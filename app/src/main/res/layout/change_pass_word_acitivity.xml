<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/my_item_space"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.xinze.haoke.widget.SimpleToolbar
        android:id="@+id/change_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/change_phone_number_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/change_old_pass_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/old_pass_word"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/change_old_pass_word_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/input_old_pass_word"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="15dp"
            android:textColorHint="@color/hint_color"
            android:textSize="12sp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <LinearLayout
        android:id="@+id/change_new_pass_word_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/change_new_pass_word_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/new_pass_word"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/change_new_pass_word_et"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:background="@null"
            android:inputType="textPassword"
            android:hint="@string/input_new_pass_word"
            android:maxLines="1"
            android:padding="15dp"
            android:textColorHint="@color/hint_color"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/my_item_space" />
    <LinearLayout
        android:id="@+id/change_new_pass_word2_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/change_new_pass_word2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/new_pass_word"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/change_new_pass_word2_et"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:inputType="textPassword"
            android:background="@null"
            android:hint="@string/input_new_pass_word"
            android:maxLines="1"
            android:padding="15dp"
            android:textColorHint="@color/hint_color"
            android:textSize="13sp" />
    </LinearLayout>
    <Button
        android:id="@+id/change_next_bt"
        android:layout_width="325dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/circle_blue_button"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="20sp" />
</LinearLayout>